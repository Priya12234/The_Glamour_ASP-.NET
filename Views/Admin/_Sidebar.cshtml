<aside id="sidebar" class="@(ViewBag.IsSidebarExpanded != null && ViewBag.IsSidebarExpanded ? "expand" : "")">
    <div class="d-flex">
        <button class="toggle-btn" type="button" onclick="toggleSidebar()">
            <i class="bi bi-grid"></i> @* Sidebar toggle icon *@
        </button>
        <div class="sidebar-logo">
            <a href="@Url.Action("Index", "Admin")" class="navbar-brand fs-4">The Glamour</a>
        </div>
    </div>
    <ul class="sidebar-nav">
        <li class="sidebar-item">
            <a href="@Url.Action("Index", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                <i class="bi bi-house-door me-2"></i> @* Home icon *@
                <span>Home</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Appointments", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Appointments" ? "active" : "")">
                <i class="bi bi-calendar-event me-2"></i>
                <span class="sidebar-text">Appointments</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Users", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                <i class="bi bi-person"></i>
                <span>Users</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Products", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                <i class="bi bi-bag"></i>
                <span>Products</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Orders", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                <i class="bi bi-box"></i>
                <span>Orders</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Services", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Services" ? "active" : "")">
                <i class="bi bi-stars"></i>
                <span>Services</span>
            </a>
        </li>
        <li class="sidebar-item">
            <a href="@Url.Action("Feedback", "Admin")" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Feedback" ? "active" : "")">
                <i class="bi bi-clipboard-check"></i>
                <span>Feedback</span>
            </a>
        </li>
    </ul>
    <div class="sidebar-footer">
        <a href="@Url.Action("Logout", "Account")" class="sidebar-link">
            <i class="bi bi-box-arrow-left"></i> @* Logout icon *@
            <span>Logout</span>
        </a>
    </div>
</aside>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('expand');
    }
</script>