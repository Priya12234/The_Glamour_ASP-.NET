<div id="feedback" class="d-flex justify-content-center align-items-center" style="background-color: #E0E0E0; font-family: 'Kaisei HarunoUmi'; font-size: small; padding: 20px; min-height: 100vh;">
    <div class="container d-flex flex-column flex-md-row align-items-center" style="gap: 40px; width: 100%; max-width: 1200px;">

        <!-- Feedback Form Section -->
        <div class="w-100 w-md-50 me-md-5" style="min-height: 400px;">
            <h2 class="text-center mb-4 fw-bold" style="font-family: 'Kaisei HarunoUmi';">
                We Value Your Feedback
            </h2>
            <form>
                <div class="mb-3">
                    <label class="form-label fw-bold">Email:</label>
                    <input type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Name:</label>
                    <input type="text" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Describe</label>
                    <textarea class="form-control" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn w-100" style="background-color: #786670; color: black; font-family: 'Kaisei HarunoUmi'; padding: 10px 20px;">
                    Submit
                </button>
            </form>
        </div>

        <!-- Latest Reviews Section -->
        <div class="w-100 w-md-40" style="max-height: 500px; overflow-y: auto; min-height: 400px;">
            <h3 class="fw-bold">Latest Reviews</h3>
            <div class="mt-3">
                @{
                    var reviews = new[]
                    {
                new { Description = "Amazing service! It was very good and excellent", Author = "Isha Tank", Date = "1 Jan 2024" },
                new { Description = "Loved the style and precision. Great experience!", Author = "Rahul Mehta", Date = "5 Feb 2024" },
                new { Description = "Great products and amazing results. Highly recommend!", Author = "Neha Sharma", Date = "12 Mar 2024" },
                new { Description = "Very relaxing and refreshing experience!", Author = "Amit Verma", Date = "20 Apr 2024" }
                };
                }

                @foreach (var review in reviews)
                {
                    <div class="card mb-3 p-3" style="background-color: white; border-radius: 10px;">
                        <p class="fw-bold">@review.Description</p>
                        <p class="fw-bold">@review.Author</p>
                        <small>@review.Date</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
