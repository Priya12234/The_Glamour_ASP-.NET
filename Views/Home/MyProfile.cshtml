@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var activeSection = Context.Request.Query["section"].FirstOrDefault() ?? "MyAppointment";
}
<style>
    /* Main container */
    .profile-container {
        display: flex;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    /* Sidebar styling */
    .sidebar {
        width: 250px;
        background-color: #E0E0E0;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        overflow-y: auto;
        padding: 20px;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    /* Content area */
    .content-area {
        flex: 1;
        padding: 20px;
        background-color: #f4f4f4;
        min-height: 100vh;
        margin-left: 250px; /* Match sidebar width */
    }

    /* Remove Bootstrap's default container padding */
    .container-fluid.p-0 {
        padding-right: 0;
        padding-left: 0;
        margin-right: 0;
        margin-left: 0;
        width: 100%;
    }
</style>

<div class="profile-container">
    <!-- Fixed Sidebar -->
    <div class="sidebar">
        @await Html.PartialAsync("_UserSidebar")
    </div>

    <!-- Main Content Area -->
    <div class="content-area">
        @switch (activeSection)
        {
            case "MyAppointment":
                @await Html.PartialAsync("_MyAppointment")
                break;
            case "MyCart":
                @await Html.PartialAsync("_MyCart")
                break;
            case "EditProfile":
                @await Html.PartialAsync("_EditProfile")
                break;
            default:
                @await Html.PartialAsync("_MyAppointment")
                break;
        }

    </div>
</div>