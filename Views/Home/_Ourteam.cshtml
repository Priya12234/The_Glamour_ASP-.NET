<div id="ourteam" class="container-fluid py-5" style="background-color: #E0E0E0; font-family: 'Kaisei HarunoUmi', serif; min-height: 100vh;">
    <h2 class="services-title display-4 font-weight-bold mb-4 text-center">Our Team</h2>
    <div class="container">
        <div class="row g-5 justify-content-center text-center">
            @{
                var teamMembers = new[]
                {
            new { Name = "Isha Tank", Description = "Enhance your natural beauty with our professional Makeup Artist services. From subtle looks to bold transformations, we tailor each session to your unique style and occasion.", ImageUrl = "/images/download (7) 4.png" },
            new { Name = "Priya Chauhan", Description = "Refresh and rejuvenate your skin with our Facial Artist services. Customized facials designed to improve skin texture and leave you with a glowing, healthy complexion.", ImageUrl = "/images/download (7) 4.png" },
            new { Name = "Drashti Chag", Description = "Achieve the perfect look with our expert Hairstylist services. Whether it’s a fresh cut, color, or special occasion style, we deliver precision and creativity for every hair type.", ImageUrl = "/images/download (7) 4.png" }
            };
            }

            @foreach (var member in teamMembers)
            {
                <div class="col-md-4">
                    <div class="d-flex flex-column align-items-center">
                        <img src="@member.ImageUrl" alt="@member.Name" class="img-fluid rounded-circle" style="width: 150px; height: 150px;" />
                        <h5 class="mt-3 fw-bold">@member.Name</h5>
                        <p class="text-muted text-left">@member.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="w-100 bg-black" style="height: 10px;"></div>
