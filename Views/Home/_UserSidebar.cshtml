@{
    var activeSection = ViewData["ActiveSection"] as string ?? "MyAppointment";
}

<style>
    .sidebar {
        width: 250px;
        background-color: #E0E0E0;
        height: 100vh;
        padding: 20px;
        position: fixed;
    }

    .back-btn {
        background-color: transparent;
        border: none;
        font-size: 24px;
        cursor: pointer;
        margin-bottom: 15px;
        display: block;
    }

    .nav-link {
        color: black;
        font-size: 18px;
        padding: 10px 0;
        text-decoration: none;
        display: block;
        transition: all 0.3s ease;
    }

        .nav-link:hover {
            text-decoration: underline;
            padding-left: 5px;
        }

        .nav-link.active {
            font-weight: bold;
            color: #007bff;
            text-decoration: underline;
        }

    .nav-item {
        margin-bottom: 5px;
    }
</style>

<div class="sidebar">
    <button onclick="history.back()" class="back-btn">←</button>
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link @(activeSection == "MyAppointment" ? "active" : "")"
               href="@Url.Action("MyProfile", "Home", new { section = "MyAppointment" })">My Appointments</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(activeSection == "MyCart" ? "active" : "")"
               href="@Url.Action("MyProfile", "Home", new { section = "MyCart" })">My Cart</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(activeSection == "EditProfile" ? "active" : "")"
               href="@Url.Action("MyProfile", "Home", new { section = "EditProfile" })">Edit Profile</a>
        </li>
    </ul>
</div>