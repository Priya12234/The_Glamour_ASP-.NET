@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="login-container-fluid d-flex justify-content-center align-items-center vh-100">
    <!-- Back Arrow -->
    <i class="bi bi-arrow-left login-back-arrow" onclick="goBack()"></i>

    <div class="row w-100 d-flex flex-column flex-md-row align-items-center justify-content-center">
        <!-- Top Side - Illustration (for small screens) -->
        <div class="col-12 col-md-6 d-flex justify-content-center mb-4 mb-md-0">
            <img src="~/images/bro1.png" alt="Salon Illustration" class="img-fluid w-75 w-md-75" />
        </div>

        <!-- Bottom Side - Login Form -->
        <div class="col-12 col-md-6 d-flex justify-content-center">
            <div class="login-card p-4 shadow w-100 max-w-400 min-vh-50 d-flex flex-column justify-content-center">
                <h2 class="login-text-center">Hello! Welcome Back</h2>
                <form id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="login-form-label">Email:</label>
                        <input type="email" class="form-control login-form-control" id="email" required />
                    </div>

                    <div class="mb-3">
                        <label for="name" class="login-form-label">Name:</label>
                        <input type="text" class="form-control login-form-control" id="name" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="login-form-label">Password:</label>
                        <input type="password" class="form-control login-form-control" id="password" required />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn login-btn w-100">Login</button>
                    </div>

                    <p class="register-text-center mt-3">
                        Don't have an account? <a href="/Home/RegisterForm">Register Yourself</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function goBack() {
        window.location.href = "/";
    }

    document.getElementById("loginForm").addEventListener("submit", function (event) {
        event.preventDefault();

        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;

        // Static user credentials
        var validEmail = "user@example.com";
        var validPassword = "password123";

        if (email === validEmail && password === validPassword) {
            localStorage.setItem("token", "fakeAuthToken"); // Simulate authentication
            window.location.href = "/"; // Redirect to homepage
        } else {
            alert("Invalid email or password");
        }
    });
</script>