@{
    var services = new[]
    {
        new { Image = "Makeup.jpg", Title = "Occasional Makeup", Description = "Our talented team of professional makeup artists specializes in creating stunning looks for every occasion." },
        new { Image = "Hairstyle1.jpg", Title = "Hairstyle", Description = "Our skilled hairstylists specialize in crafting beautiful, personalized looks for any occasion." },
        new { Image = "facial2.jpg", Title = "Facial", Description = "Experience rejuvenation with facials that cleanse, nourish, and bring out your skin’s natural radiance." },
        new { Image = "Bride.jpg", Title = "Bridal Makeup", Description = "Enhance your bridal glow with makeup that highlights your beauty, lasts all day, and creates a timeless, elegant look." },
        new { Image = "Nail.png", Title = "NailArt", Description = "Elevate your style with nail art that adds a touch of elegance, creativity, and flawless detail to every look." },
        new { Image = "Haircut.jpg", Title = "Haircut", Description = "Transform your look with a haircut that perfectly suits your style, adding freshness and confidence to your appearance." },
        new { Image = "Spa.jpg", Title = "Spa", Description = "Enjoy a relaxing spa experience that refreshes your body, calms your mind, and makes you feel great." },
        new { Image = "Mehndi.jpg", Title = "Mehndi", Description = "Adorn your hands with beautiful mehndi designs that add charm to every special occasion." },
    };
}

<div id="services" class="services-container text-center py-5">
    <h2 class="services-title display-4 font-weight-bold mb-4">What We Provide</h2>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (var i = 0; i < services.Length; i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="d-flex justify-content-center align-items-center flex-wrap card-container py-3">
                        @for (var j = i; j < i + 3 && j < services.Length; j++)
                        {
                            var service = services[j];
                            var imagePath = Url.Content("~/images/" + service.Image);
                            <a asp-controller="Home" asp-action="OurServices" class="text-decoration-none">
                                <div class="card card-custom">
                                    <img src="@imagePath" class="card-img-top card-img-custom" alt="@service.Title" />
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <h3 class="card-title">@service.Title</h3>
                                        <p class="card-text">@service.Description</p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Carousel Controls -->
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>

    <!-- Book Appointment Button -->
    <div class="d-flex justify-content-start mt-4" style="padding-left: 200px;">
        <a asp-controller="Home" asp-action="AppointmentForm" class="btn book-appointment-btn-custom">Book Appointment</a>
    </div>
</div>
<div class="w-100 bg-dark" style="height: 10px;"></div>